<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <CheckBox
        android:id="@+id/checkBox_100"
        style="@style/text_style.small"
        android:text="100 кг"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_50"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="50 кг"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_100" />

    <CheckBox
        android:id="@+id/checkBox_10"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="10 кг"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_50" />

    <CheckBox
        android:id="@+id/checkBox_1"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="1 кг"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_10" />

    <CheckBox
        android:id="@+id/checkBox_0.5"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="0,5 кг"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/weight_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <CheckBox
        android:id="@+id/checkBox_0.1"
        style="@style/text_style.small"
        android:text="100 г"
        app:layout_constraintStart_toStartOf="@+id/weight_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_0.05"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="50 г"
        app:layout_constraintStart_toStartOf="@+id/weight_guideline"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_100" />

    <CheckBox
        android:id="@+id/checkBox_0.01"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="10 г"
        app:layout_constraintStart_toStartOf="@+id/weight_guideline"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_50" />

    <CheckBox
        android:id="@+id/checkBox_0.001"
        style="@style/text_style.small"
        android:layout_marginTop="8dp"
        android:text="1 г"
        app:layout_constraintStart_toStartOf="@+id/weight_guideline"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_10" />

</androidx.constraintlayout.widget.ConstraintLayout>